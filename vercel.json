{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "@vercel/php@.17.1"
    },
    {
      "src": "vite.config.js",
      "use": "@vercel/static-build",
      "config": { "distDir": "public/build" }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "public/index.php" }
  ]
}
